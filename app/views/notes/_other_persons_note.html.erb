<div class="row card-body border-bottom">
  <div class="col-12">
    <% if other_persons_note.user.avatar.attached? %>
      <%= image_tag @note.user.avatar, alt: 'プロフィール画像', class: 'rounded-circle', width: '50' %>
    <% else %>
      <%= image_tag 'https://placehold.jp/150x150.png', alt: 'プロフィール画像', class: 'rounded-circle', width: '50' %>
    <% end %>
    <%= other_persons_note.user.username %>
  </div>
  <div class="col-12">
    <%= link_to other_persons_note.title, note_path(other_persons_note), class: 'note-title-other' %>
  </div>
  <div class="col-12">
    <%= render partial: 'tags/tag', locals: { note: other_persons_note } %>
  </div>
  <div class="col-12">
    更新日時:<%= other_persons_note.updated_at.strftime('%Y/%m/%d %H:%M:%S') %><br>
    作成日時:<%= other_persons_note.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
  </div>
</div>
