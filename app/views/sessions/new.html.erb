<div class="col-md-4">
  <h1 class="text-center mb-3">ログイン</h1>

  <div class="card card-body mb-5">
    <%= form_with url: login_path, data: { turbo_method: :post } do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email, 'メールアドレス', class: 'form-label' %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
      <div class="form-group mb-3">
        <%= f.label :password, 'パスワード', class: 'form-label' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="d-grid gap-2">
        <%= f.submit 'ログイン', class: 'btn btn-primary my-3' %>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    登録がまだの方はこちらから
    <%= link_to '新規登録', new_user_path, class: 'btn btn-success' %>
  </div>
</div>
